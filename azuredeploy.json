{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "minLength": 2,
      "maxLength": 5
    },
    "deployMock": {
      "type": "bool",
      "defaultValue": false
    },
    "deployHCI": {
      "type": "bool",
      "defaultValue": true
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "templateURL": {
      "type": "string",
      "metadata": {
        "description": "URL Location on where to find the templates"
      },
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/azure-hcl-nested/master/templates/"
    },
    "remoteAccessACL": {
      "type": "string",
      "metadata": {
        "description": "Allow Remote Access IP (CIDR)"
      },
      "defaultValue": "Internet"
    },
    "vnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (CIDR)"
      },
      "defaultValue": "10.0.0.0/16"
    },
    "subnetCIDR": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Address Prefix (CIDR)"
      },
      "defaultValue": "10.0.0.0/20"
    },
    "serverPrivateIp": {
      "type": "string",
      "metadata": {
        "description": "Windows Server Private IP"
      },
      "defaultValue": "10.0.0.4"
    },
    "serverUserName": {
      "type": "string",
      "metadata": {
        "description": "Windows SA Account UserName"
      },
      "minLength": 5
    },
    "serverPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Windows SA Account Password"
      },
      "minLength": 10
    },
    "serverSize": {
      "type": "string",
      "metadata": {
        "description": "The virtual machine server size."
      },
      "defaultValue": "Standard_D16s_v3",
      "allowedValues": [
        "Standard_D16s_v3",
        "Standard_D32s_v3",
        "Standard_D64s_v3",
        "Standard_D16s_v4",
        "Standard_D32s_v4",
        "Standard_D64s_v4",
        "Standard_D16d_v4",
        "Standard_D32d_v4",
        "Standard_D64d_v4",
        "Standard_D16ds_v4",
        "Standard_D32ds_v4",
        "Standard_D64ds_v4",
        "Standard_E8s_v3",
        "Standard_E16s_v3",
        "Standard_E16-4s_v3",
        "Standard_E16-8s_v3",
        "Standard_E20s_v3",
        "Standard_E32s_v3",
        "Standard_E32-8s_v3",
        "Standard_E32-16s_v3",
        "Standard_E48s_v3",
        "Standard_E64s_v3",
        "Standard_E64-16s_v3",
        "Standard_E64-32s_v3",
        "Standard_E8s_v4",
        "Standard_E16s_v4",
        "Standard_E16-8s_v4",
        "Standard_E20s_v4",
        "Standard_E32s_v4",
        "Standard_E32-8s_v4",
        "Standard_E32-16s_v4",
        "Standard_E48s_v4",
        "Standard_E64s_v4",
        "Standard_E64-16s_v4",
        "Standard_E64-32s_v4",
        "Standard_E8d_v4",
        "Standard_E16d_v4",
        "Standard_E20d_v4",
        "Standard_E32d_v4",
        "Standard_E48d_v4",
        "Standard_E64d_v4",
        "Standard_E8ds_v4",
        "Standard_E16ds_v4",
        "Standard_E20ds_v4",
        "Standard_E32ds_v4",
        "Standard_E48ds_v4",
        "Standard_E64ds_v4",
        "Standard_E64-16ds_v4",
        "Standard_E64-32ds_v4"
      ]
    },
    "serverRdpPort": {
      "type": "string",
      "defaultValue": "3389",
      "metadata": {
        "description": "If you wish to use a different port to RDP into the VM (between 0 and 65535), change it here, otherwise, leave the default."
      }
    },
    "servicePrincipalClientId": {
      "type": "string",
      "metadata": {
        "description": "Application Client Id."
      }
    },
    "servicePrincipalClientKey": {
      "type": "string",
      "metadata": {
        "description": "Application Client Key."
      }
    },
    "servicePrincipalObjectId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId of Service Principal."
      }
    }
  },
  "variables": {
    "commonGroup": "[concat(parameters('prefix'), '-commonresources')]",
    "controlPlaneGroup": "[concat(parameters('prefix'), '-controlplane')]",
    "dataPlaneGroup": "[concat(parameters('prefix'), '-dataplane')]",
    "dataPlaneGroupOnPrem": "[concat(parameters('prefix'), '-mock-dataplane-onprem')]",
    "tempGroupArc": "[concat(parameters('prefix'), '-hci-stuff')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('commonGroup')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('controlPlaneGroup')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroup')]",
      "properties": {}
    },
    {
      "condition": "[parameters('deployMock')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroupOnPrem')]",
      "properties": {}
    },
    {
      "condition": "[parameters('deployHCI')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('tempGroupArc')]",
      "properties": {}
    },
    {
      "name": "TemplateControlPlaneKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('controlPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('controlPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployControlPlaneKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          }
        }
      }
    },
    {
      "name": "TemplateCommon",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('commonGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('commonGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployCommonResources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
        }
      }
    },
    {
      "name": "TemplateMockOnPrem",
      "condition": "[parameters('deployMock')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[variables('dataPlaneGroupOnPrem')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupOnPrem'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployMockOnPrem.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('serverUserName')]"
          },
          "adminPassword": {
            "value": "[parameters('serverPassword')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
