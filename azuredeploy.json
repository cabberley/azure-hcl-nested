{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "minLength": 2,
      "maxLength": 5,
      "defaultValue": "demo"
    },
    "deployMock": {
      "type": "bool",
      "defaultValue": true
    },
    "deployDataPlane": {
      "type": "bool",
      "defaultValue": true
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "templateURL": {
      "type": "string",
      "metadata": {
        "description": "URL Location on where to find the templates"
      },
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/azure-hcl-nested/master/templates/"
    },
    "serverUserName": {
      "type": "string",
      "metadata": {
        "description": "Windows SA Account UserName"
      },
      "minLength": 5
    },
    "serverPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Windows SA Account Password"
      },
      "minLength": 10
    },
    "serverSize": {
      "type": "string",
      "metadata": {
        "description": "The virtual machine server size."
      },
      "defaultValue": "Standard_D16s_v3",
      "allowedValues": [
        "Standard_D16s_v3",
        "Standard_D32s_v3",
        "Standard_D64s_v3",
        "Standard_D16s_v4",
        "Standard_D32s_v4",
        "Standard_D64s_v4",
        "Standard_D16d_v4",
        "Standard_D32d_v4",
        "Standard_D64d_v4",
        "Standard_D16ds_v4",
        "Standard_D32ds_v4",
        "Standard_D64ds_v4",
        "Standard_E8s_v3",
        "Standard_E16s_v3",
        "Standard_E16-4s_v3",
        "Standard_E16-8s_v3",
        "Standard_E20s_v3",
        "Standard_E32s_v3",
        "Standard_E32-8s_v3",
        "Standard_E32-16s_v3",
        "Standard_E48s_v3",
        "Standard_E64s_v3",
        "Standard_E64-16s_v3",
        "Standard_E64-32s_v3",
        "Standard_E8s_v4",
        "Standard_E16s_v4",
        "Standard_E16-8s_v4",
        "Standard_E20s_v4",
        "Standard_E32s_v4",
        "Standard_E32-8s_v4",
        "Standard_E32-16s_v4",
        "Standard_E48s_v4",
        "Standard_E64s_v4",
        "Standard_E64-16s_v4",
        "Standard_E64-32s_v4",
        "Standard_E8d_v4",
        "Standard_E16d_v4",
        "Standard_E20d_v4",
        "Standard_E32d_v4",
        "Standard_E48d_v4",
        "Standard_E64d_v4",
        "Standard_E8ds_v4",
        "Standard_E16ds_v4",
        "Standard_E20ds_v4",
        "Standard_E32ds_v4",
        "Standard_E48ds_v4",
        "Standard_E64ds_v4",
        "Standard_E64-16ds_v4",
        "Standard_E64-32ds_v4"
      ]
    }
  },
  "variables": {
    "centralGroup": "[concat('edge-', parameters('prefix'), '-centralIT')]",
    "controlPlaneGroup": "[concat('edge-', parameters('prefix'), '-controlplane')]",
    "dataPlaneGroup": "[concat('edge-', parameters('prefix'), '-dataplane')]",
    "dataPlaneGroupOnPrem": "[concat('edge-', parameters('prefix'), '-onprem-mock')]"
  },
  "resources": [
    {
      "comments": "## Central Resource Group (Required) ##",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('centralGroup')]",
      "properties": {}
    },
    {
      "comments": "## Lock Central IT Resource Group (Required) ##",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[concat('lock-', variables('centralGroup'))]",
      "resourceGroup": "[variables('centralGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('centralGroup'))]"
      ],
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "outer"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Authorization/locks",
              "apiVersion": "2017-04-01",
              "name": "DontDelete",
              "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent deletion of the resourceGroup"
              }
            }
          ]
        }
      }
    },
    {
      "comments": "## Control Plane Resource Group (Required) ##",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "name": "[variables('controlPlaneGroup')]",
      "properties": {}
    },
    {
      "comments": "## On-Prem Resource Group (Optional) ##",
      "condition": "[parameters('deployMock')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroupOnPrem')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[concat('lock-', variables('dataPlaneGroupOnPrem'))]",
      "resourceGroup": "[variables('dataPlaneGroupOnPrem')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupOnPrem'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Authorization/locks",
              "apiVersion": "2017-04-01",
              "name": "DontDelete",
              "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent deletion of the resourceGroup"
              }
            }
          ]
        }
      }
    },
    {
      "comments": "## Data Plane Resource Group (Optional) ##",
      "condition": "[parameters('deployDataPlane')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroup')]",
      "properties": {}
    },
    {
      "comments": "## Central Resources Deployment Template ##",
      "name": "TemplateCentralIT",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('centralGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('centralGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployCentralResources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {}
      }
    },
    {
      "comments": "## On-Prem Resources Deployment Template ##",
      "name": "TemplateMockOnPrem",
      "condition": "[parameters('deployMock')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[variables('dataPlaneGroupOnPrem')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupOnPrem'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployMockOnPrem.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "adminUsername": {
            "value": "[parameters('serverUserName')]"
          },
          "adminPassword": {
            "value": "[parameters('serverPassword')]"
          },
          "vmName": {
            "value": "hci"
          },
          "vmSize": {
            "value": "[parameters('serverSize')]"
          }
        }
      }
    },
    {
      "comments": "## Control Plane Resources Deployment Template ##",
      "name": "TemplateControlPlane",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('controlPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('controlPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployControlPlane.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          }
        }
      }
    },
    {
      "comments": "## Data Plane Resources Deployment Template ##",
      "name": "TemplateDataPlane",
      "condition": "[parameters('deployDataPlane')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('dataPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlane.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "subnet": {
            "value": "[reference('TemplateCentralIT').outputs.dataPlaneNetwork.value.subnetId]"
          }
        }
      }
    },
    {
      "comments": "## Central-IT VPN Gateway Connect Template ##",
      "name": "TemplateCentralITLocalGateway",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[variables('centralGroup')]",
      "dependsOn": [
        "TemplateCentralIT",
        "TemplateMockOnPrem"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployCentralResourcesLocalGateway.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "azureCloudVnetPrefix": {
            "value": "[reference('TemplateMockOnPrem', '2020-06-01').outputs.mocOnpremNetworkPrefix.value]"
          },
          "gatewayIpAddress": {
            "value": "[reference('TemplateMockOnPrem', '2020-06-01').outputs.vpnIp.value]"
          },
          "azureNetworkGatewayName": {
            "value": "[reference('TemplateCentralIT', '2020-06-01').outputs.azureGatewayName.value]"
          }
        }
      }
    },
    {
      "comments": "## On-Prem VPN Gateway Connect Template ##",
      "name": "TemplateMockOnPremLocalGateway",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[variables('dataPlaneGroupOnPrem')]",
      "dependsOn": [
        "TemplateCentralIT",
        "TemplateMockOnPrem"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployMockOnPremLocalGateway.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "gatewayIpAddress": {
            "value": "[reference('TemplateCentralIT', '2020-06-01').outputs.vpnIp.value]"
          },
          "azureCloudVnetPrefix": {
            "value": "[reference('TemplateCentralIT', '2020-06-01').outputs.mocOnpremNetwork.value]"
          },
          "spokeNetworkAddressPrefix": {
            "value": "[reference('TemplateCentralIT', '2020-06-01').outputs.spokeNetworkAddressPrefix.value]"
          },
          "mocOnpremGatewayName": {
            "value": "[reference('TemplateMockOnPrem', '2020-06-01').outputs.mocOnpremGatewayName.value]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
