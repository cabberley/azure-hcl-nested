{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "minLength": 2,
      "maxLength": 5
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "templateURL": {
      "type": "string",
      "metadata": {
        "description": "URL Location on where to find the templates"
      },
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/azure-hcl-nested/master/templates/"
    },
    "remoteAccessACL": {
      "type": "string",
      "metadata": {
        "description": "Allow Remote Access IP (CIDR)"
      },
      "defaultValue": "Internet"
    },
    "vnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (CIDR)"
      },
      "defaultValue": "10.0.0.0/16"
    },
    "subnetCIDR": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Address Prefix (CIDR)"
      },
      "defaultValue": "10.0.0.0/20"
    },
    "serverUserName": {
      "type": "string",
      "metadata": {
        "description": "Windows SA Account UserName"
      },
      "minLength": 5
    },
    "serverPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Windows SA Account Password"
      },
      "minLength": 10
    },
    "servicePrincipalClientId": {
      "type": "string",
      "metadata": {
        "description": "Application Client Id."
      }
    },
    "servicePrincipalClientKey": {
      "type": "string",
      "metadata": {
        "description": "Application Client Key."
      }
    },
    "servicePrincipalObjectId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId of Service Principal."
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "The virtual machine server size."
      },
      "defaultValue": "Standard_D16s_v3",
      "allowedValues": [
        "Standard_D16s_v3",
        "Standard_D32s_v3",
        "Standard_D64s_v3",
        "Standard_D16s_v4",
        "Standard_D32s_v4",
        "Standard_D64s_v4",
        "Standard_D16d_v4",
        "Standard_D32d_v4",
        "Standard_D64d_v4",
        "Standard_D16ds_v4",
        "Standard_D32ds_v4",
        "Standard_D64ds_v4",
        "Standard_E8s_v3",
        "Standard_E16s_v3",
        "Standard_E16-4s_v3",
        "Standard_E16-8s_v3",
        "Standard_E20s_v3",
        "Standard_E32s_v3",
        "Standard_E32-8s_v3",
        "Standard_E32-16s_v3",
        "Standard_E48s_v3",
        "Standard_E64s_v3",
        "Standard_E64-16s_v3",
        "Standard_E64-32s_v3",
        "Standard_E8s_v4",
        "Standard_E16s_v4",
        "Standard_E16-8s_v4",
        "Standard_E20s_v4",
        "Standard_E32s_v4",
        "Standard_E32-8s_v4",
        "Standard_E32-16s_v4",
        "Standard_E48s_v4",
        "Standard_E64s_v4",
        "Standard_E64-16s_v4",
        "Standard_E64-32s_v4",
        "Standard_E8d_v4",
        "Standard_E16d_v4",
        "Standard_E20d_v4",
        "Standard_E32d_v4",
        "Standard_E48d_v4",
        "Standard_E64d_v4",
        "Standard_E8ds_v4",
        "Standard_E16ds_v4",
        "Standard_E20ds_v4",
        "Standard_E32ds_v4",
        "Standard_E48ds_v4",
        "Standard_E64ds_v4",
        "Standard_E64-16ds_v4",
        "Standard_E64-32ds_v4"
      ]
    }
  },
  "variables": {
    "controlPlaneGroup": "[concat(parameters('prefix'), '-controlplane')]",
    "dataPlaneGroup": "[concat(parameters('prefix'), '-dataplane')]",
    "dataPlaneGroupArc": "[concat(parameters('prefix'), '-dataplane-arc')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('controlPlaneGroup')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroup')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('dataPlaneGroupArc')]",
      "properties": {}
    },
    {
      "name": "TemplateControlPlaneKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('controlPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('controlPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployControlPlaneKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          }
        }
      }
    },
    {
      "name": "TemplateLogAnalytics",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('controlPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('controlPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployControlPlaneLogAnalytics.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          }
        }
      }
    },
    {
      "name": "TemplateDataPlaneKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('dataPlaneGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlaneKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "servicePrincipalClientId": {
            "value": "[parameters('servicePrincipalClientId')]"
          },
          "servicePrincipalClientKey": {
            "value": "[parameters('servicePrincipalClientKey')]"
          },
          "servicePrincipalObjectId": {
            "value": "[parameters('servicePrincipalObjectId')]"
          }
        }
      }
    },
    {
      "name": "TemplateDataPlaneArcVNet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('dataPlaneGroupArc')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupArc'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlaneArcVNet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "vnetPrefix": {
            "value": "[parameters('vnetPrefix')]"
          },
          "subnet1Prefix": {
            "value": "[parameters('subnetCIDR')]"
          },
          "remoteAccessACL": {
            "value": "[parameters('remoteAccessACL')]"
          },
          "servicePrincipalObjectId": {
            "value": "[parameters('servicePrincipalObjectId')]"
          }
        }
      }
    },
    {
      "name": "TemplateDataPlaneArcKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('dataPlaneGroupArc')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupArc'))]",
        "TemplateDataPlaneArcVNet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlaneArcKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "servicePrincipalClientId": {
            "value": "[parameters('servicePrincipalClientId')]"
          },
          "servicePrincipalClientKey": {
            "value": "[parameters('servicePrincipalClientKey')]"
          },
          "servicePrincipalObjectId": {
            "value": "[parameters('servicePrincipalObjectId')]"
          },
          "serverUserName": {
            "value": "[parameters('serverUserName')]"
          },
          "serverPassword": {
            "value": "[parameters('serverPassword')]"
          }
        }
      }
    },
    {
      "name": "TemplateDataPlaneArcStorage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "resourceGroup": "[variables('dataPlaneGroupArc')]",
      "dependsOn": [
        "TemplateDataPlaneArcVNet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlaneArcStorage.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "storageAccountType": {
            "value": "Standard_LRS"
          },
          "vnetName": {
            "value": "[reference('TemplateDataPlaneArcVNet').outputs.virtualNetwork.value.name]"
          },
          "subnet": {
            "value": "[reference('TemplateDataPlaneArcVNet').outputs.subnets.value.subnet1Name]"
          }
        }
      }
    },
    {
      "name": "TemplateDataPlanArcVirtualMachine",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[variables('dataPlaneGroupArc')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('dataPlaneGroupArc'))]",
        "TemplateDataPlaneArcVNet",
        "TemplateDataPlaneKeyVault"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployDataPlaneArcVirtualMachine.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "subnetId": {
            "value": "[reference('TemplateDataPlaneArcVNet').outputs.subnets.value.subnet1Id]"
          },
          "vmSize": {
            "value": "[parameters('bastionSize')]"
          },
          "adminUserName": {
            "reference": {
              "keyVault": {
                "id": "[reference('TemplateDataPlaneKeyVault').outputs.keyVault.value.id]"
              },
              "secretName": "serverUserName"
            }
          },
          "adminUserPassword": {
            "reference": {
              "keyVault": {
                "id": "[reference('TemplateDataPlaneKeyVault').outputs.keyVault.value.id]"
              },
              "secretName": "serverPasword"
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}
