{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "minLength": 2,
      "maxLength": 5,
      "defaultValue": "demo"
    },
    "newGuid": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "forceUpdateTag property, used to force the execution of the script resource when no other properties have changed."
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "userIdentityName": {
      "type": "string",
      "metadata": {
        "description": "User Managed Identity Name"
      },
      "defaultValue": "edgeDeployer"
    }
  },
  "variables": {
    "centralGroup": "[concat('edge-', parameters('prefix'), '-centralIT')]"
  },
  "resources": [
    {
      "comments": "## Create Central IT Resource Group (Required) ##",
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "kind": "AzureCLI",
      "name": "[variables('centralGroup')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('userIdentityName'))]": {}
        }
      },
      "properties": {
        "forceUpdateTag": "[parameters('newGuid')]",
        "containerSettings": {
          "containerGroupName": "scriptCreateCentralGroup"
        },
        "AzCliVersion": "2.0.80",
        "environmentVariables": [
          {
            "name": "RESOURCEGROUP",
            "value": "[variables('centralGroup')]"
          },
          {
            "name": "LOCATION",
            "value": "[parameters('location')]"
          }
        ],
        "scriptContent": "az group create -g $RESOURCEGROUP -l $Location",
        "supportingScriptUris": [],
        "timeout": "PT30M",
        "retentionInterval": "P1D",
        "cleanupPreference": "OnSuccess"
      }
    },
    {
      "comments": "## Lock Central IT Resource Group (Required) ##",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[concat('lock-', variables('centralGroup'))]",
      "resourceGroup": "[variables('centralGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deploymentScripts/', variables('centralGroup'))]"
      ],
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "outer"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Authorization/locks",
              "apiVersion": "2017-04-01",
              "name": "DontDelete",
              "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent deletion of the resourceGroup"
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {}
}