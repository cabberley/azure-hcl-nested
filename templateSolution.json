{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newGuid": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "forceUpdateTag property, used to force the execution of the script resource when no other properties have changed."
      }
    },
    "regionLocation": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus2"
    },
    "userIdentityName": {
      "type": "string",
      "metadata": {
        "description": "User Managed Identity Name"
      },
      "defaultValue": "deployerIdentity"
    },
    "templateURL": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/azure-hcl-nested/main/azuredeploy.json",
      "metadata": {
        "description": "URL of the solution to deploy."
      }
    },
    "adminUser": {
      "type": "string",
      "metadata": {
        "description": "Windows SA Account UserName"
      },
      "minLength": 5
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Windows SA Account Password"
      },
      "minLength": 10
    }
  },
  "variables": {
    "scriptURL": "https://raw.githubusercontent.com/danielscholl/azure-hcl-nested/main/scripts/createSolution.sh"
  },
  "resources": [
    {
      "comments": "## Create Central IT Resource Group (Required) ##",
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "kind": "AzureCLI",
      "name": "createSolution.sh",
      "location": "[parameters('regionLocation')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('userIdentityName'))]": {}
        }
      },
      "properties": {
        "forceUpdateTag": "[parameters('newGuid')]",
        "containerSettings": {
          "containerGroupName": "executorContainer"
        },
        "AzCliVersion": "2.0.80",
        "environmentVariables": [
          {
            "name": "LOCATION",
            "value": "[parameters('regionLocation')]"
          },
          {
            "name": "RESOURCEGROUP",
            "value": "[resourceGroup().name]"
          },
          {
            "name": "ADMIN_USER",
            "value": "[parameters('adminUser')]"
          },
          {
            "name": "ADMIN_PASSWORD",
            "value": "[parameters('adminPassword')]"
          },
          {
            "name": "IDENTITY_NAME",
            "value": "[parameters('userIdentityName')]"
          }
        ],
        "arguments": "[parameters('templateURL')]",
        "primaryScriptUri": "[variables('scriptURL')]",
        "supportingScriptUris": [],
        "timeout": "PT30M",
        "retentionInterval": "P1D",
        "cleanupPreference": "OnExpiration"
      }
    }
  ],
  "outputs": {}
}